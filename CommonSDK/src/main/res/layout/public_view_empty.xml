<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/xui_config_color_background"
              android:gravity="center">

    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="-4dp"
            android:drawableTop="@drawable/null_content_error"
            android:gravity="center_horizontal"
            android:text="@string/public_empty_text"
            android:textColor="@color/xui_gray_4"
            android:textSize="?attr/xui_config_size_title" />

    </LinearLayout>


</LinearLayout>
