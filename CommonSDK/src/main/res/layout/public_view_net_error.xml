<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/xui_config_color_background"
              android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="62dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="-4dp"
            android:drawableTop="@drawable/null_network_error"
            android:gravity="center_horizontal"
            android:text="@string/public_net_error"
            android:textColor="@color/xui_gray_4"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/common_neterror_refresh"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/public_shape_radius_green"
            android:textSize="@dimen/xui_config_size_title"
            android:textColor="@color/white"
            android:text="@string/public_load_again"/>

    </LinearLayout>

</LinearLayout>
